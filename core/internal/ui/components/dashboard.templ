package components

templ Dashboard(userName string) {
	@Layout("Project Platform | Dashboard") {
		<div class="w-full max-w-5xl mx-auto mt-16 px-4 sm:px-6">
			// Top Nav / Header
			<div class="flex flex-col sm:flex-row sm:items-end justify-between border-b border-zinc-200 dark:border-zinc-800 pb-4 mb-8 gap-4">
				<div>
					<h2 class="text-xl text-zinc-900 dark:text-white uppercase tracking-widest flex items-center gap-3">
						<div class="w-2 h-2 bg-green-500 animate-pulse"></div>
						Workspace_Active
					</h2>
					<p class="text-xs text-zinc-500 mt-2 font-mono">user: { userName }</p>
				</div>
				<div class="sm:text-right">
					<span class="text-xs text-zinc-400 font-mono bg-zinc-100 dark:bg-zinc-900 px-2 py-1 rounded-sm">
						engine: knative-serving
					</span>
				</div>
			</div>
			// Quick Actions (The "Vercel" feel)
			<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-12">
				<button class="flex flex-col items-start p-4 border border-zinc-300 dark:border-zinc-800 bg-white dark:bg-zinc-950/50 hover:bg-zinc-50 dark:hover:bg-zinc-900 transition-colors group">
					<span class="text-sm text-black dark:text-white uppercase tracking-widest mb-2 group-hover:text-green-600 dark:group-hover:text-green-400 transition-colors">[+] Deploy Service</span>
					<span class="text-xs text-zinc-500 text-left">Push a new Go, Rust, or Zig function</span>
				</button>
				<button class="flex flex-col items-start p-4 border border-zinc-300 dark:border-zinc-800 bg-white dark:bg-zinc-950/50 hover:bg-zinc-50 dark:hover:bg-zinc-900 transition-colors group">
					<span class="text-sm text-black dark:text-white uppercase tracking-widest mb-2 group-hover:text-green-600 dark:group-hover:text-green-400 transition-colors">[*] AI Models</span>
					<span class="text-xs text-zinc-500 text-left">Manage Ollama inference endpoints</span>
				</button>
				<div class="flex flex-col items-start p-4 border border-zinc-300 dark:border-zinc-800 bg-zinc-50 dark:bg-zinc-900/30">
					<span class="text-sm text-zinc-400 uppercase tracking-widest mb-2">System Status</span>
					<span class="text-xs text-green-600 dark:text-green-400">All Knative nodes operational</span>
				</div>
			</div>
			// Active Services Table
			<div class="border border-zinc-300 dark:border-zinc-800 bg-white dark:bg-zinc-950/50">
				<div class="p-4 border-b border-zinc-200 dark:border-zinc-800 flex justify-between items-center">
					<h3 class="text-sm text-zinc-900 dark:text-zinc-100 uppercase tracking-widest">Active Deployments</h3>
				</div>
				<div class="p-0">
					// Mock Data: A Go API Deployment
					<div class="flex flex-col sm:flex-row sm:items-center justify-between p-4 border-b border-zinc-100 dark:border-zinc-800/50 hover:bg-zinc-50 dark:hover:bg-zinc-900/50 transition-colors">
						<div class="flex items-center gap-4 mb-2 sm:mb-0">
							<div class="w-1.5 h-1.5 bg-green-500 rounded-full"></div>
							<div>
								<p class="text-sm text-zinc-900 dark:text-zinc-200 font-bold">go-auth-api</p>
								<p class="text-xs text-zinc-500 mt-1">runtime: go1.22 • rev: 4</p>
							</div>
						</div>
						<div class="sm:text-right">
							<a href="#" class="text-sm text-zinc-600 dark:text-zinc-400 hover:text-black dark:hover:text-white border-b border-transparent hover:border-zinc-500 transition-all">
								auth.api.projectplatform.dev
							</a>
							<p class="text-xs text-zinc-500 mt-1">Ready • scaled to 1</p>
						</div>
					</div>
					// Mock Data: A Scale-to-Zero Rust Function
					<div class="flex flex-col sm:flex-row sm:items-center justify-between p-4 border-b border-zinc-100 dark:border-zinc-800/50 hover:bg-zinc-50 dark:hover:bg-zinc-900/50 transition-colors">
						<div class="flex items-center gap-4 mb-2 sm:mb-0">
							<div class="w-1.5 h-1.5 bg-zinc-300 dark:bg-zinc-700 rounded-full"></div>
							<div>
								<p class="text-sm text-zinc-900 dark:text-zinc-200 font-bold">rust-image-processor</p>
								<p class="text-xs text-zinc-500 mt-1">runtime: rust-1.76 • rev: 12</p>
							</div>
						</div>
						<div class="sm:text-right">
							<a href="#" class="text-sm text-zinc-600 dark:text-zinc-400 hover:text-black dark:hover:text-white border-b border-transparent hover:border-zinc-500 transition-all">
								images.api.projectplatform.dev
							</a>
							<p class="text-xs text-zinc-500 mt-1">Standby • scaled to 0</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
}
